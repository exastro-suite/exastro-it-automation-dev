// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.231.6/containers/jekyll
{
	"name": "it-automation2 - ita-by-menu-export-import",
	"dockerComposeFile": ["../docker-compose.yml", "../docker-compose.agent.oase.yml","../docker-compose.devcontainer.yml", "../docker-compose.platform.yml"],
	"service": "ita-by-menu-export-import",
	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"settings": {
				"files.trimTrailingWhitespace": true,
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "bash",

				"python.interpreterPath": "/usr/bin/python3.12",
				"python.defaultInterpreterPath": "/usr/bin/python3.12",

				// git menu setting
				"git.allowNoVerifyCommit": true,

				// python extension setting
				"python.linting.pylintEnabled": false,
				"python.linting.flake8Enabled": true,

				"python.linting.lintOnSave": true,

				"python.linting.flake8Args": [
					"--ignore=W293, W504",
					"--max-line-length=150",
					"--max-complexity=20",
				],

				"python.formatting.provider": "autopep8",

				"python.formatting.autopep8Args": [
					"--aggressive", "--aggressive",
				],

				"snyk.scanningMode": "manual",
				"snyk.severity": {
					"medium": false,
					"low": false
				},
				"python.testing.cwd": "${workspaceFolder}/ita_root/ita_by_menu_export_import",
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"python.testing.pytestArgs": [
					"--cov=${workspaceFolder}/ita_root/ita_by_menu_export_import/",
					"--cov-report=xml",
					"--capture=no",
				],
				"python.testing.autoTestDiscoverOnSaveEnabled": true,
				"coverage-gutters.showGutterCoverage": false,
				"coverage-gutters.showLineCoverage": true,
				"coverage-gutters.showRulerCoverage": false,
				"coverage-gutters.coverageBaseDir": "ita_root/ita_by_menu_export_import",
				"coverage-gutters.coverageReportFileName": "ita_root/ita_by_menu_export_import/coverage.xml",
				"sonarlint.analysisExcludesStandalone": "**/.volumes/**,**/tests/db/**",
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"donjayamanne.python-extension-pack",
				"ms-python.vscode-pylance",
				"ms-ceintl.vscode-language-pack-ja",
				"ms-vscode.references-view",
				"eamodio.gitlens",
				"mhutchie.git-graph",
				"redhat.vscode-yaml",
				"hediet.vscode-drawio",
				"oderwat.indent-rainbow",
				"aaron-bond.better-comments",
				"sonarsource.sonarlint-vscode",
				"mechatroner.rainbow-csv",
				"ryu1kn.partial-diff",
				"pkief.material-icon-theme",
				// "mtxr.sqltools",
				// "mtxr.sqltools-driver-mysql",
				"mitchdenny.ecdc",
				"snyk-security.snyk-vulnerability-scanner",
				"ryanluker.vscode-coverage-gutters",
			]
		}
	},
	// // Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [
	// 	8000
	// ],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "onCreateCommand":"sudo dnf install -y git vim diffutils bind-utils iputils && sudo pip3.9 install flake8 && sudo pip3.9 install autopep8",
	// "postAttachCommand": "",
	"postCreateCommand": "sudo chmod -R 777 /home/app_user/.vscode-server && sudo chmod 777 /home/app_user/.vscode-server-insiders",
	"workspaceFolder": "/workspace",
	"overrideCommand": true,
}
